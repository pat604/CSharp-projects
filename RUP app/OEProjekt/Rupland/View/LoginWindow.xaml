<Window x:Class="CurrentProject.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rupland - Bejelentkezés" Height="325" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <StackPanel Margin="10">

            <Label Content="E-mail" Margin="0,0,0,2"/>
            <TextBox Text="{Binding TextBoxEmail}" Height="23" VerticalContentAlignment="Center" Margin="0,0,0,5" Padding="5,0,0,0" MaxLines="1"/>

            <Label Content="Jelszó" Margin="0,0,0,2"/>
            <TextBox Text="{Binding TextBoxPassword}" Height="23" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0,0,0" MaxLines="2"/>

            <Button Content="Bejelentkezés" Height="25" Margin="0,0,0,10" Cursor="Hand" Click="buttonLogin_Click" TabIndex="3"/>

            <Label Content="{Binding LabelError}" Height="40" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11" Foreground="Red" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Button Content="Regisztráció" Height="21" Margin="0,0,0,10" Cursor="Hand" Click="buttonRegistration_Click" TabIndex="4"/>
            <Button Content="Jelszóemlékeztető" Height="21" Margin="0,0,0,10" Cursor="Hand" TabIndex="5" Click="buttonPasswordRecovery_Click"/>
            
        </StackPanel>
        
    </Grid>
    
</Window>

